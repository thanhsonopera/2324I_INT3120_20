<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AuctionApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.AuctionApp" parent="Base.Theme.AuctionApp" >
        <item name="android:windowAnimationStyle">@style/Theme.AuctionApp.WindowAnimation</item>
    </style>
    <style name="Theme.AuctionApp.WindowAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_right</item>
    </style>
    <style name="Province" parent="Theme.Material3.DayNight">
        <item name="android:windowAnimationStyle">@style/Theme.AuctionApp.WindowAnimation</item>
    </style>
    <style name="nightModeSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/night_mode</item>
        <item name="colorSwitchThumbNormal">#FFFFFF</item>
        <item name="android:colorForeground">#99FFFFFF</item>
    </style>
    <style name="turn_on_notification" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/notification</item>
        <item name="colorSwitchThumbNormal">#FFFFFF</item>
        <item name="android:colorForeground">#99FFFFFF</item>
    </style>
    <style name="SlideUpAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
    </style>
</resources>